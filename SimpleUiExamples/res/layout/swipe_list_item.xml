<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/swype_list_item_front"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:tag="swype_list_item_front" >

        <TextView
            android:id="@+id/swype_list_item_front_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Front" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/swype_list_item_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:tag="swype_list_item_back" >

        <Button
            android:id="@+id/swype_list_item_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button on Back" />
    </LinearLayout>

</FrameLayout>